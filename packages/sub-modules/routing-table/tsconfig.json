{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "lib": ["es5", "es6", "dom"],
    "downlevelIteration": true,
    "declaration": true,
    "esModuleInterop": true,
    "watch": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist",
    "tests",
    "build"
  ]
}