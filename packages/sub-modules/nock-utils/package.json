{
  "name": "@pokt-network/pocket-js-nock-utils",
  "version": "0.0.1-rc",
  "description": "PocketJS Nock Utilities for Unit and Integration testing",
  "main": "./index",
  "types": "./dist/index.d.ts",
  "scripts": {
    "generateDocs": "typedoc",
    "test:unit": "nyc mocha --require ts-node/register \"tests/src/unit/**/*.ts\" --timeout 0 --exit",
    "build": "rm -rf dist && mkdir dist && cti create ./src && tsc && yarn run lint && yarn run generateDocs",
    "prepare": "npm run build",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "update": "rm -rf dist && rm -rf node_modules && rm -rf package-lock.json && yarn install"
  },
  "keywords": [
    "pocket-js",
    "pocket",
    "network",
    "blockchain",
    "sdk",
    "typescript",
    "javascript",
    "tests",
    "utils",
    "nock"
  ],
  "author": "Pocket Network",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "create-ts-index": "^1.13.6",
    "nock": "^12.0.3",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.3.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.24.0",
    "typedoc": "^0.20.36",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@pokt-network/aat-js": "^0.1.3-rc",
    "@pokt-network/pocket-js-relay-models": "file:../relay-models",
    "@pokt-network/pocket-js-rpc-models": "file:../rpc-models",
    "@pokt-network/pocket-js-test-utils": "file:../test-utils",
    "@pokt-network/pocket-js-utils": "file:../utils",
    "@types/node": "^14.14.31",
    "dotenv": "^8.6.0"
  }
}
