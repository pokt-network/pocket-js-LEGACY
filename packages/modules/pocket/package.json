{
  "name": "@pokt-network/pocket-js",
  "version": "0.0.1-rc",
  "description": "PocketJS Main interface",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "generateDocs": "typedoc",
    "browserify": "browserify browserify.js -p [ minifyify --no-map ] --standalone PocketJS > dist/web.js",
    "test:unit": "nyc mocha --require ts-node/register \"tests/src/unit/**/*.ts\" --timeout 0 --exit",
    "build": "rm -rf dist && mkdir dist && cti create ./src && npm run lint && tsc && npm run generateDocs",
    "prepare": "npm run build && npm run browserify",
    "lint": "tslint -p tsconfig.json",
    "update": "rm -rf dist && rm -rf node_modules && rm -rf package-lock.json && npm install"
  },
  "keywords": [
    "pocket-js",
    "pocket",
    "network",
    "blockchain",
    "sdk",
    "typescript",
    "javascript",
    "interface"
  ],
  "author": "Pocket Network",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/dotenv": "^8.2.0",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.32",
    "browserify": "^17.0.0",
    "chai": "^4.2.0",
    "create-ts-index": "^1.13.6",
    "mocha": "^7.1.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.20.36",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@pokt-network/aat-js": "0.1.1-rc",
    "@pokt-network/pocket-js-configuration": "../../sub-modules/configuration/",
    "@pokt-network/pocket-js-http-provider": "../../sub-modules/http-provider/",
    "@pokt-network/pocket-js-keybase": "../keybase",
    "@pokt-network/pocket-js-query": "../query",
    "@pokt-network/pocket-js-relay-models": "../../sub-modules/relay-models",
    "@pokt-network/pocket-js-relayer": "../relayer",
    "@pokt-network/pocket-js-rpc-client": "../../sub-modules/rpc-client",
    "@pokt-network/pocket-js-rpc-models": "../../sub-modules/rpc-models/",
    "@pokt-network/pocket-js-session-manager": "../session-manager/",
    "@pokt-network/pocket-js-storage": "../../sub-modules/storage/",
    "@pokt-network/pocket-js-transactions": "../transactions",
    "@pokt-network/pocket-js-utils": "../../sub-modules/utils/",
    "browserify": "^17.0.0",
    "minifyify": "^7.3.5"
  }
}
