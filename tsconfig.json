{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./lib",
    "strict": true,
    "alwaysStrict": true,
    "lib": ["es5", "es6", "dom"],
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "watch": false
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "lib",
    "tests"
  ]
}