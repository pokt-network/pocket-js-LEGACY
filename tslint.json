{
    "extends": ["tslint:recommended", "tslint-config-prettier"],
    "rules": {
        "ordered-imports": [false],
        "no-bitwise": false,
        "prefer-for-of": false,
        "no-console": false,
        "no-namespace": false,
        "semicolon": [true, "never"],
        "no-unused-expression": false,
        "only-arrow-functions": false,
        "max-classes-per-file": [true, 2],
        "forin": false,
        "no-shadowed-variable": false
    },
    "linterOptions": {
        "exclude": [
            "**/index.ts",
            "lib/*"
        ]
    }
 }
 